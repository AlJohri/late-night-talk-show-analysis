   <p xml:id="1" begin="00:00:07.200" end="00:00:08.801">&gt;&gt;&gt; UNRESOLVED PROBLEM<br/></p>
   <p xml:id="2" begin="00:00:08.000" end="00:00:09.435">SEGMENT TONIGHT.<br/></p>
